<h1>Burger Eater</h1>

<h2>Created Burgers!</h2>

<ul id="not-devoured">
  {{#each burgers}}
    {{name}}
    <button class="eat-burger" data-id="{{this.id}}">Eat Me!</button>
  {{/each}}
</ul>

<ul id="devoured">
  {{#each burgers}}
    {{name}}
  {{/each}}
</ul>

<h2>Make a Burger!</h2>
<form class="create-burger">
  <div class="form-group">
    <label for="burger-name">Burger Name:</label>
    <input type="text" id="burger-name" name="name">
  </div>

  <button type="submit">Add Your Burger</button>
</form>